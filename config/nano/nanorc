# GNU nano — configuração pessoal (clean & produtiva)

# Comportamento
set autoindent            # Mantém indentação da linha anterior
set tabsize 4             # Tamanho do TAB
set matchbrackets "(<[{)>]}"
set smarthome             # Home inteligente (texto antes da coluna 0)
set trimblanks            # Remove espaços no fim das linhas

# Interface
set linenumbers           # Mostra números de linha
set constantshow          # Exibe posição do cursor
set minibar               # Interface compacta
set softwrap              # Quebra visual de linhas longas

# Cores
set titlecolor bold,white,grey
set promptcolor lightwhite,grey
set statuscolor bold,white,green
set errorcolor bold,white,red
set spotlightcolor black,lightyellow
set selectedcolor black,yellow
set stripecolor ,#444
set scrollercolor slate,#222
set numbercolor green
set keycolor cyan
set functioncolor green

# Syntax Highlighting
include /usr/share/nano/*.nanorc

## Keybindings

# Clipboard estilo moderno
bind ^X cut main
bind ^C copy main
bind ^V paste all

# Arquivo / Sessão
bind ^S savefile main
bind ^Q exit all

# Undo / Redo
bind ^Z undo main
bind ^Y redo main

# Navegação / Seleção
bind ^A mark main
bind ^T gotoline main

# Toggle Comentários em código
bind ^/ comment main

# Ajuda
bind ^H help all
bind ^H exit help
